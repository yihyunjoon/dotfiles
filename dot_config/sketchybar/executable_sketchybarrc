PLUGIN_DIR="$CONFIG_DIR/plugins"

##### Bar Appearance #####
sketchybar --bar position=bottom height=40 blur_radius=30 color=0x40000000

##### Changing Defaults #####
default=(
  padding_left=5
  padding_right=5
  icon.font="Monoplex KR Nerd:Bold:17.0"
  label.font="SF Pro:Semibold:14.0"
  icon.color=0xffffffff
  label.color=0xffffffff
  icon.padding_left=4
  icon.padding_right=4
  label.padding_left=4
  label.padding_right=4
)
sketchybar --default "${default[@]}"

##### Adding AeroSpace Workspace Indicators #####
sketchybar --add event aerospace_workspace_change

for workspace in q w e r t; do
  workspace_icon="$(printf '%s' "$workspace" | tr '[:lower:]' '[:upper:]')"
  workspace_item=(
    icon="$workspace_icon"
    icon.color=0x99ffffff
    icon.padding_left=7
    icon.padding_right=7
    background.drawing=on
    background.color=0x20ffffff
    background.corner_radius=5
    background.height=25
    label.drawing=off
    click_script="aerospace workspace $workspace"
    script="$PLUGIN_DIR/aerospace.sh $workspace"
  )
  sketchybar --add item "space.$workspace" left
  sketchybar --set "space.$workspace" "${workspace_item[@]}"
  sketchybar --subscribe "space.$workspace" aerospace_workspace_change
done

##### Adding Right Items #####
sketchybar --add item clock right \
           --set clock update_freq=10 icon=Ôê∫  script="$PLUGIN_DIR/clock.sh"

##### Force all scripts to run the first time (never do this in a script) #####
sketchybar --update
